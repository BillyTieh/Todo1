@model PIP_Todo1.Models.UserInfoViewModel
@{
    ViewBag.Title = "新增員工資料";
}

<h2>新增員工資料</h2>

@using(Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.UserID, "員工編號")
        @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserNameEN, "員工英文姓名")
        @Html.TextBoxFor(model => model.UserNameEN, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserNameEN)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "職位")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "電子郵件")
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address, "地址")
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TeamID, "團隊編號")
        @Html.TextBoxFor(model => model.TeamID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TeamID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TeamName, "團隊名稱")
        @Html.TextBoxFor(model => model.TeamName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TeamName)
    </div>

    <div class="form-group">
        <input type="submit" value="新增" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Userlist", "UserInfo")
</div>


@if(ViewBag.ErrorMessage != null) {
    <script>
        alert("@ViewBag.ErrorMessage");
        // 清空表單欄位
        $('input[type=text], input[type=email]').val('');
    </script>
}

@if(TempData["CreateSuccess"] != null) {
    <script>
        alert("@TempData["CreateSuccess"]");
    </script>
}

@if(TempData["CreateError"] != null) {
    <script>
        alert("@TempData["CreateError"]");
    </script>
}

<style>
    .field-validation-error {
        color: red;
    }
</style>



