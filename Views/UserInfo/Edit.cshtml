@model PIP_Todo1.Models.UserInfoViewModel
@{
    ViewBag.Title = "編輯員工資料";
}

<h2>編輯員工資料</h2>

@using(Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.UserID, "員工編號")
        @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserNameEN, "員工英文姓名")
        @Html.TextBoxFor(model => model.UserNameEN, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserNameEN)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "職位")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email, "電子郵件")
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address, "地址")
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TeamID, "團隊編號")
        @Html.TextBoxFor(model => model.TeamID, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TeamID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TeamName, "團隊名稱")
        @Html.TextBoxFor(model => model.TeamName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TeamName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CreateDT, "建立時間: ")
        @Html.DisplayFor(model => model.CreateDT, new { @class = "form-control" })
        @Html.HiddenFor(model => model.CreateDT)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UpdateDT, "更新時間: ")
        @Html.DisplayFor(model => model.UpdateDT, new { @class = "form-control" })
        @Html.HiddenFor(model => model.UpdateDT)
    </div>

    <div class="form-group">
        <input type="submit" value="保存" class="btn btn-primary" />
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Userlist", "UserInfo")
</div>

@if(!string.IsNullOrEmpty(ViewBag.ErrorMessage)) {
    <script>
        alert("@ViewBag.ErrorMessage");
    </script>
}

<style>
    .field-validation-error {
        color: red;
    }
</style>

